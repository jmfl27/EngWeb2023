extends layout

block content
  .w3-card-4
    header.w3-container.w3-red
        h2 Editar Tarefa
        h3 
            button.w3-btn.w3-pale-red #[a(href="/") #[b Voltar ao Início]]    
    form.w3-container.w3-card-4(method="POST")
        fieldset.w3-sand
            legend #[b Tarefa]
            input(type="hidden" name="id" value=tarefa.id)
            label Descrição da tarefa
            input.w3-input.w3-border(type="text" name="desc" value=tarefa.desc)
            label Qual a data limite?
            input.w3-input.w3-border(type="date" name="due" value=tarefa.due)
            label Quem a irá realizar?
            select.w3-select(name="who")
                option(value=tarefa.who disabled selected) Escolha uma pessoa...
                    each u in utilizadores
                        option.w3-center #{u.name}
            input(type="hidden" name="done" value="false")
                 
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Enviar

    footer.w3-container.w3-yellow
        h5 João Loureiro - a97257 | Engenharia Web 2023 - Universidade do Minho
        h5 Generated by server: #{d}

