extends layout

block content
  .w3-card-4
    header.w3-container.w3-red
        h2 Formulário de Novo Utilizador
        h3 
            button.w3-btn.w3-pale-red #[a(herf="/") Voltar ao Início]    
    form.w3-container(method="POST")
        fieldset.w3-sand
            legend Utilizador
            input(type="hidden" name="id" value=#{idUser})
            label Nome
            input.w3-input.w3-round(type="text" name="name")
            label Username
            input.w3-input.w3-round(type="text" name="usrnm")
                      
            button.w3-btn.w3-green.w3-mb-2(type="submit") Registar

    footer.w3-container.w3-yellow
        h5 João Loureiro - a97257 | Engenharia Web 2023 - Universidade do Minho
        h5 Generated by server: #{d}

